Bootstrap: docker
From: ubuntu:latest

%runscript
    /sratoolkit/bin/fastq-dump --split-files $@

%environment
    PATH=$PATH:/sratoolkit/bin

%post
    apt update
    apt install -y wget

    # install SRA Toolkit
    wget -O sratoolkit.tar.gz http://ftp-trace.ncbi.nlm.nih.gov/sra/sdk/current/sratoolkit.current-ubuntu64.tar.gz
    mkdir sratoolkit
    tar -xf sratoolkit.tar.gz -C sratoolkit --strip-components 1

   # create mount points for TACC directories
   mkdir /home1
   mkdir /scratch
   mkdir /work

%test
    /sratoolkit/bin/fastq-dump --help
